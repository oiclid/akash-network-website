---
import ButtonLink from "@/components/ui/button-link.astro";
import Layout from "@/layouts/layout.astro";
---

<Layout title="Support">
  <div class="pt-[40px] md:pb-[80px] md:pt-[120px]">
    <div class="container text-center">
      <h3 class="text-2xl font-bold text-foreground md:text-3lg">
        Get the support you need
      </h3>
    </div>

    <div class="container py-[40px] md:py-[80px]">
      <div class="border-b"></div>
    </div>

    <div
      class="container flex grid-cols-1 flex-wrap items-center justify-center gap-[40px] md:grid-cols-2 lg:grid-cols-3"
    >
      <div
        class="flex w-full flex-col justify-start rounded-[8px] border bg-background2 p-6 md:w-[45%] lg:w-[30%]"
      >
        <h4 class="text-base font-bold leading-normal">GitHub Issues</h4>
        <p
          class="mt-2 text-xs font-normal
      leading-[16px] md:mt-3 md:text-sm md:leading-5"
        >
          Explore, discuss, and report technical issues on our GitHub
          repository. Our community actively collaborates to resolve problems
          and provide assistance.
        </p>

        <div class="mt-20 flex justify-start md:mt-12">
          <ButtonLink
            link="https://github.com/akash-network"
            variant="secondary"
          >
            <svg
              width="16"
              height="16"
              class="text-para dark:text-iconText"
              viewBox="0 0 16 16"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                d="M10.6693 14.6842V12.7709C10.6943 12.453 10.6514 12.1334 10.5433 11.8334C10.4353 11.5334 10.2646 11.2598 10.0427 11.0309C12.136 10.7975 14.336 10.0042 14.336 6.3642C14.3358 5.43342 13.9778 4.53834 13.336 3.8642C13.6399 3.04987 13.6184 2.14977 13.276 1.35087C13.276 1.35087 12.4893 1.11754 10.6693 2.33754C9.14133 1.92342 7.53065 1.92342 6.00266 2.33754C4.18266 1.11754 3.39599 1.35087 3.39599 1.35087C3.05357 2.14977 3.03208 3.04987 3.33599 3.8642C2.68941 4.54334 2.331 5.44651 2.33599 6.3842C2.33599 9.99754 4.53599 10.7909 6.62932 11.0509C6.40999 11.2775 6.24083 11.5478 6.13286 11.8442C6.02489 12.1405 5.98053 12.4562 6.00266 12.7709V14.6842"
                stroke="currentColor"
                strokeLinecap="round"
                strokeLinejoin="round"></path>
              <path
                d="M6.0026 13.3516C4.0026 14.0004 2.33594 13.3516 1.33594 11.3516"
                stroke="currentColor"
                strokeLinecap="round"
                strokeLinejoin="round"></path>
            </svg>

            GitHub Issues
          </ButtonLink>
        </div>
      </div>

      <div
        class="flex w-full flex-col justify-start rounded-[8px] border bg-background2 p-6 md:w-[45%] lg:w-[30%]"
      >
        <h4 class="text-base font-bold leading-normal">Ask the Community</h4>
        <p
          class="mt-2 text-xs font-normal
      leading-[16px] md:mt-3 md:text-sm md:leading-5"
        >
          Explore, discuss, and report technical issues on our GitHub
          repository. Our community actively collaborates to resolve problems
          and provide assistance.
        </p>

        <div class="mt-20 flex justify-start md:mt-12">
          <ButtonLink
            link="https://discord.com/invite/akash"
            variant="secondary"
          >
            <svg
              width="17"
              height="16"
              viewBox="0 0 17 16"
              class="text-para dark:text-iconText"
              fill="none"
              stroke="currentColor"
              xmlns="http://www.w3.org/2000/svg"
