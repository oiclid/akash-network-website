<section
  id="socials"
  class="mx-auto mb-[66px] flex max-w-[1100px] flex-col items-center justify-center px-6 md:mb-[96px] xl:px-0"
>
  <div>
    <h2 class="text-center text-2xl font-semibold">
      Explore our Social Channels
    </h2>
    <p class="mt-3 text-center text-sm">
      Be part of the Akash Network community. Connect, contribute, and
      collaborate to shape the future of decentralized cloud computing.
    </p>
  </div>

  <div
    class="mt-10 grid w-full grid-cols-2 flex-wrap justify-center gap-4 md:grid-cols-3 md:gap-6 lg:flex"
  >
    {
      socials.map((social) => (
        <a
          href={social.link}
          class="flex items-center gap-2 rounded-lg border bg-background2 px-3 py-3 shadow-sm transition-colors hover:bg-gray-50 dark:hover:bg-darkGray  lg:px-12 lg:py-4"
        >
          <div class="flex size-10 items-center  justify-center rounded-lg border border-paraDark bg-background md:size-12">
            <div set:html={social.icon} />
          </div>
          <span class="text-sm font-semibold md:text-base">{social.name}</span>
        </a>
      ))
    }
  </div>
</section>
