---
import { TelegramIcon, TwitterIcon } from "@/components/header/icons";
import ButtonLink from "@/components/ui/button-link.astro";
import { Swiper } from "./swiper";

const { testimonialsSection } = Astro.props;
---

<section>
  <div
    class="container mt-[80px] flex flex-col items-center gap-y-10 md:justify-between"
  >
    <div class="w-full text-center">
      <h2 class="font-instrument text-3xl md:text-4xl lg:text-5xl">
        {testimonialsSection.title}
      </h2>
      <p
        class="mt-8 text-center text-base md:text-lg"
        set:html={testimonialsSection.description}
      />
    </div>

    <div class="flex flex-wrap items-center justify-center gap-4">
      <ButtonLink
        link="https://github.com/akash-network"
        variant="secondary"
        size="lg"
        target="_blank"
        aria-label="Github"
      >
        <svg
          width="16"
          height="16"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
