---
import { Image } from "astro:assets";
import ButtonLink from "../ui/button-link.astro";
const { title, date, location, description, image, ctaLabel, ctaLink } =
  Astro.props;
---

<div class="not-prose mt-8 flex flex-col">
  <div class="w-full">
    <Image
      src={image}
      alt={`banner image for the post ${title}`}
      width={1200}
      height={1200}
      format="webp"
      class="h-full bg-gray-100 object-cover"
      loading="eager"
    />
  </div>

  <div class="mt-4 flex w-full flex-col">
    <div class="flex flex-col">
      <p class="text-xs font-medium md:text-base">
        <span class="font-medium">{date}</span> . {location}
      </p>
      <h3 class="mt-3 text-xl font-bold leading-none md:text-2xl lg:text-2lg">
        {title}
      </h3>
      <p
        class="mt-[22px] text-sm font-normal leading-[20px] md:text-base md:leading-[28px] lg:text-lg"
      >
        {description}
      </p>

      <div class="mt-6 flex justify-start">
        <ButtonLink variant="secondary" size="xl" link={ctaLink}>
          <svg
            width="20"
            height="20"
            viewBox="0 0 20 20"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
            class="mr-2"
          >
            <path
              d="M7.64062 12.3573L12.3547 7.64325M12.3547 7.64325H8.22988M12.3547 7.64325V11.7681"
              stroke="#11181C"
              strokeLinecap="round"
              strokeLinejoin="round"></path>
            <path
              d="M9.9974 18.3334C14.5997 18.3334 18.3307 14.6024 18.3307 10C18.3307 5.39765 14.5997 1.66669 9.9974 1.66669C5.39502 1.66669 1.66406 5.39765 1.66406 10C1.66406 14.6024 5.39502 18.3334 9.9974 18.3334Z"
              stroke="#11181C"
              strokeLinecap="round"
              strokeLinejoin="round"></path>
          </svg>
          {ctaLabel}
        </ButtonLink>
      </div>
    </div>
  </div>
</div>
